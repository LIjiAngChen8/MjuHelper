/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.center{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.info{
  width:35rpx;
  height: 35rpx;
  border-radius: 50%;
}
.box{
  width: 92%;
  /* height: 150rpx; */
  margin: 0 auto;
  border-radius: 20rpx;
  box-shadow: 0 0rpx 15rpx 0 rgba(78, 78, 78, 0.2);
}

.title{
  color: rgb(41, 41, 41);
  font-size: 30rpx;
  font-weight:500;
} 
.img{
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  margin: 0 0 0 15rpx;
}
.flexx{
  display: flex;
  align-items: center;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}