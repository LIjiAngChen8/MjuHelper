page{
    background-color: #fff;
}
.details{
    width: 90%;
    margin: 20rpx auto;
    display: flex;

}
.book-name{
    font-weight: bold;
}
.details-right{
    width: 60%;
    margin-left: 30rpx;
}
.author{
    font-size: small;
    color: rgb(126, 126, 126);
}
.describe{
    font-size: smaller;
    color: #a9aeb8;
}
.book-cover{
    height: 300rpx;
    max-width: 200px;
    border-radius: 6rpx;
    box-shadow: 0 0 10px 1px #dbdbdb;
}
.teacher{
    display: flex;
    
}
.teacher-box{
    display: flex;
    flex-flow: column;
    align-items: center;
    padding-right:20rpx;
}
.teacher-box:first-child{
    margin-left: 5%;
}
.teacher-img{
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}
.tb-name{
    margin-top: 10rpx;
    font-size: smaller;
}
.comments-tab{
    display: flex;
    align-items: center;
}
.tab-item{
    font-size:small;
    color: #9e9e9e;
}
.active{
    font-weight: bolder;
    color: rgb(20, 20, 20);
}
.divLine{
    background: #dadada;
    height: 100%;
    width: 2rpx;
    margin: 0 15rpx;
}