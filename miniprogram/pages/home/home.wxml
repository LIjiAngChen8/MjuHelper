  <view class="title">推荐</view>
  <scroll-view scroll-x="true"  scroll-with-animation='true'>
    <view class="bookscroll" style="height:260rpx;" scroll-x="true">
      <view class="tuijian">
          <view ></view>
          <view style="display: flex;align-items: center;justify-content: space-between;">
            <image class="info" src="cloud://lijiangchen-6gcgn9nn7845c6fa.6c69-lijiangchen-6gcgn9nn7845c6fa-1258885867/info/1.jpg"></image>
              <text>某某某</text>
              <view class="user">
                <image src="/images/icon/loveon.png"></image>
                <text>532</text>
