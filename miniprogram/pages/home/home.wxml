<view class="navigation-Height" ></view>

<view class="container" style="margin-top: -85rpx;">
  <view class="function">
    <view class="sousuo">
      <image class="img" src="/images/icon/sousuo.png"></image>
      <input type="text" placeholder="搜索" placeholder-style="color:#535353;"></input>
    </view>
    <view class="functiontitle">
      <text>校园服务</text>
    </view>
    <view class="server">
      <view wx:if="{{Mjuitem.sign==0}}" class="serverbox"  wx:for="{{Mjuserver}}" wx:for-index="Mjukey" wx:key="Mjukey"  wx:for-item="Mjuitem" bindtap="Mjuserver" data-index="{{Mjukey}}">
        <image src="{{Mjuitem.iconurl}}"></image>
        <text>{{Mjuitem.title}}</text>
      </view>
    </view>
  </view>
</view>
<view class="container">
    <view class="time-box">
      <view class="titlebox">
        <view style="display: flex;align-items: flex-end;">
          <view class="title">今日课程</view>
          <view class="title1">/4节</view>
        </view>
        <view class="flexx">
          <view class="title-a" style="margin-right:0rpx;">第{{week}}周</view>
          <image style="height:40rpx;margin:0 30rpx 0 5rpx;" mode="heightFix" src="/images/left.png"></image>
        </view>
      </view>
      <scroll-view class="timesrcolbox" scroll-x	 scroll-with-animation='true' bindtouchstart="handletouchtart" bindtouchmove="handletouchmove" bindtouchend='touchEnd'>
          <view class="time-box-m">
              <view  wx:for="{{timelist}}" wx:key="key"  wx:for-item="item">
                <view class="center time-a" bindtap="clicktime" data-index="{{index}}">
                  <view class="time-box-text">{{item[1]}}</view>
                  <view class="{{index == timeindex  ? 'time-box-box-h' : 'time-box-box'}}">{{item[0]}}</view>
                </view>  
              </view>
          </view>
      </scroll-view>
    </view>
  </view>
  <view class="bookbox">
  <scroll-view scroll-x="true"  scroll-with-animation='true'> 
        <view class="bookscroll" scroll-x="true">
            <view style="width:8%;height:230rpx;"></view> 
            <view class="book_Item" wx:for="{{booklist}}" wx:key="bookkey"  wx:for-item="bookitme"> 
              <view class="boxbook">
                  <view class="cover-page">
                      <image class="book" style="width: 150rpx;" mode="widthFix" src="{{bookitme.bookurl}}"></image>
                  </view>
                  <view class="inside-page"></view>
                  <view class="inside-page"></view>
                  <view class="inside-page"></view>
                  <view class="inside-page"></view>
                  <view class="bookpage">
                      <text class="book-text1">{{bookitme.book}}</text>
                      <text class="book-text2">{{bookitme.teacher}}</text>
                      <text class="book-text3">{{bookitme.time}}节</text>
                      <text class="book-text4">{{bookitme.address}}</text>
                  </view>
                  <view class="end-page">
                    <image class="bookend" style="width: 150rpx;" mode="widthFix" src="{{bookitme.bookurl}}"></image>
                  </view>
              </view>
            </view>
        </view>  
  </scroll-view> 
</view>
