<view class="bar-box" style='height:{{navigationBarHeight}}'>
  <view class="status-height" style='height:{{statusBarHeight}}'></view>
  <view></view>
</view>
<view class="navigation-Height"></view>
<!-- 校园服务 -->
<view class="navbar">
  <view class="search">
    <image class="img" src="https://vkceyugu.cdn.bspapp.com/VKCEYUGU-efbfcb02-017d-4e68-a2c7-f92e33192dbb/b1bbaf31-c688-4854-9793-7ec263cc7557.png"></image>
    <input type="text" placeholder="搜索" placeholder-style="color:#535353;"></input>
  </view>
  <title>校园服务</title>
  <view class="server">
    <view wx:if="{{Mjuitem.sign==0}}" class="server-item" wx:for="{{Mjuserver}}" wx:for-index="Mjukey" wx:key="Mjukey" wx:for-item="Mjuitem" bindtap="Mjuserver" data-index="{{Mjukey}}">
      <image src="{{Mjuitem.iconurl}}"></image>
      <text>{{Mjuitem.title}}</text>
    </view>
  </view>
</view>
<!-- 今日课程 -->
<view class="today">
  <view class="today-title">
    <view class="today-title-left">
      <p class="title">今日课程</p>
      <p class="ttl-t2">/{{booklist.length}}节</p>
    </view>
    <view class="today-title-right">
      <p>第{{week}}周</p>
      <view class="mjuicon icon-youjiantou"></view>
    </view>
  </view>
  <scroll-view class="timesrcolbox" scroll-x scroll-with-animation='true' bindtouchstart="handletouchtart" bindtouchmove="handletouchmove" bindtouchend='touchEnd'>
    <view class="container-today">
      <span class="center time-a" wx:for="{{timelist}}" wx:key="key" wx:for-item="item" bindtap="clicktime" data-index="{{index}}">
        <p class="time-box-text">{{item[1]}}</p>
        <p class="{{index == timeindex  ? 'time-box-box-h' : 'time-box-box'}}">{{item[0]}}</p>
      </span>
    </view>
  </scroll-view>
</view>
<!-- 翻页书本 -->
<scroll-view class="bookscroll" scroll-x="true" enable-flex="true" scroll-with-animation='true'>
  <view class="book_item" wx:for="{{booklist}}" wx:key="bookkey" wx:for-item="bookItme">
    <view class="book">
      <view class="frist-page">
        <image mode="widthFix" src="{{bookItme.bookurl}}"></image>
      </view>
      <view class="inside-page"></view>
      <view class="inside-page"></view>
      <view class="inside-page"></view>
      <view class="inside-page"></view>
      <view class="bookpage" bindtap="toBookDetails" data-course="{{bookItme}}">
        <text class="book-text1">{{bookItme.book}}</text>
        <text class="book-text2">{{bookItme.teacher}}</text>
        <text class="book-text3">{{bookItme.time}}节</text>
        <text class="book-text4">{{bookItme.address}}</text>
      </view>
      <view class="end-page">
        <image class="bookend" style="width: 150rpx;" mode="widthFix" src="{{bookItme.bookurl}}"></image>
      </view>
    </view>
  </view>
</scroll-view>
<!-- 推荐栏 -->
<view class="recommend">
  <view class="title" style="margin-top: 5px;margin-bottom: 5px;">推荐</view>
  <scroll-view style="height:440rpx;" class="bookscroll" scroll-x="true" enable-flex="true" scroll-with-animation='true'>
    <view class="note" wx:for="{{recommend}}" wx:key="key">
      <image class="note-img" src="{{item.img}}" mode='widthFix' bindtap="toDaily"></image>
      <text class="note-text">{{item.text}}</text>
      <view class="userinfo">
        <image src="{{item.avatar}}" alt="" class="user-avatar" mode="heightFix"/>
        <text class="user-name ellipsis">{{item.nickName}}</text>
        <image class="likeimg" src="https://vkceyugu.cdn.bspapp.com/VKCEYUGU-efbfcb02-017d-4e68-a2c7-f92e33192dbb/af39d285-c4b5-4a80-98b6-326545621317.png" mode="heightFix"/>
        <text class="likeNum ellipsis">{{ljc.ChangeLikeNum(item.likeNumber)}}</text>
      </view>
    </view>
  </scroll-view>
</view>
<!-- 广告轮播 -->
<swiper class="ad-swiper" autoplay='true' interval='5000' circular='true' indicator-dots='ture' indicator-color='rgba(0,0,0,0.3)' indicator-active-color='rgba(255,255,255)'>
  <swiper-item wx:for="{{bannner}}" wx:key="key">
    <image src="{{item.url}}" style="width:100%; " mode="widthFix" />
  </swiper-item>
</swiper>
<wxs module="ljc">
function likeNum(num) {
    if (num > 9999 && num <= 99999) {
        num = parseInt(num / 10000);
        num = parseInt(num) + "万";
    }
    return num;
}
module.exports = {
  ChangeLikeNum: likeNum,
};
 </wxs>
