page{
  background-color: #ffffff;
}
.bookscroll{
  height:260rpx; 
  width:100%;
  display: flex;
  display: -webkit-box;
  flex-direction: column;
}
.bar-box{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.navigation-Height{
  height: 270rpx;
  border-radius:0 0 10% 10%;
  background-image: url('https://vkceyugu.cdn.bspapp.com/VKCEYUGU-efbfcb02-017d-4e68-a2c7-f92e33192dbb/9447b92f-916f-4634-a9d7-b4417d6d123b.jpg');
  background-size:cover;
  background-repeat:no-repeat;
}
.title{
  margin-left: 20rpx;
  font-weight:500;
  color: rgb(41, 41, 41);
}
/* 今日课程 */
.today{
  display: flex;
  flex-direction: column;
  background-color:#ffffff;
  margin:0 auto;
  margin-top:20rpx;
  padding: 10rpx 0 5rpx 0;
  width: 92%;
  box-shadow: 0 0rpx 15rpx 0 rgba(0, 72, 255, 0.17);
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  backdrop-filter: blur( 4.5px );-webkit-backdrop-filter: blur( 4.5px );
}
.today-title{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
}
.today-title-left{
  display: flex;
  align-items: flex-end;
}
.ttl-t2{
  font-size: x-small;
  font-weight:500;
  color: rgb(78, 78, 78);
}
.today-title-right{
  display: flex;
  align-items: center;
}
.today-title-right p{
  font-size:28rpx;margin-right:0;
  background-color: blanchedalmond;
  border-radius: 15rpx;
  width:100rpx;
  text-align: center;
}
.today-title-right image{
  height:40rpx;margin:0 30rpx 0 5rpx;
}
.container-today{
  width:100%;
  height:100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.time-a{
  width:80rpx;
}
.time-box-box{
  width:50rpx;
  height:50rpx;
  border-radius:20%;
  text-align: center;
  color:rgb(29, 29, 29);
}
.time-box-box-h{
  background: radial-gradient( rgb(0, 0, 255), rgba(88, 88, 255, 0.97));
  box-shadow: 0 0rpx 10rpx 2rpx rgba(67, 67, 255, 0.97);
  width:50rpx;
  height:50rpx;
  text-align: center;
  border-radius:50%;
  transition:all 0.3s linear;
  color:rgb(255, 255, 255);
}
.time-box-text{
  margin-bottom:8rpx;
  color: rgb(29, 29, 29);
  font-size:25rpx;
}
.timesrcolbox{
  width: 100%;
  height:110rpx;
  margin-top:10rpx;
}
/* 搜索+服务入口区 */
.navbar{
  width: 92%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
  margin-top: -85rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 0rpx 15rpx 0 rgba(78, 78, 78, 0.17);
  backdrop-filter: blur(4.5px);-webkit-backdrop-filter: blur(4.5px);
  border: 1rpx solid rgba( 255, 255, 255, 0.18 );
}
.search{
  width:90%;
  height:70rpx;
  background-color:rgba(255, 255, 255, 1);
  box-shadow: 0 0 10rpx 0 rgba(78, 78, 78, 0.17);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  margin: 15rpx 0;
}
.search input{
  height:90%;
  width:85%;
  line-height: 100%;
  font-size:30rpx;
  text-align: start;
  color: #111111;
}
.navbar title{
  width: 100%;
  margin-left: 24rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
  color: rgb(41, 41, 41);
  font-size: 28rpx;
  font-weight:500;
}
.server{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content:start;
  align-items: center;
  transition:all 1s linear;
}
.server-item{
  width: 20%;
  display: flex;
  flex-direction:column;
  align-items: center;
  flex: 0 0 auto;
  margin-bottom: 10rpx;
}
.server image{
  width:70rpx;
  height:70rpx;
  border-radius: 50%;
  margin: 0rpx;
}
.server text{
  color: #383838;
  font-size: 22rpx;
}
/* 推荐栏 */
.recommend{
  width: 92%;
  margin: 0 auto;
  border-radius: 20rpx;
  box-shadow: 0 0rpx 15rpx 0 rgba(78, 78, 78, 0.2);
}
.note{
  position: relative;
  width: 35%;
  margin: 0 5rpx;
  font-size: small;
  height: 410rpx;
}
.note:first-child{
  margin-left: 20rpx;
}
.note:last-child{
  padding-right: 20rpx;
}
.note-img{
  width: 100%;
  max-height: 318px;
  border-radius: 5px;
}
.note-text{
  position: absolute;
  bottom: 22px;
  display: -webkit-box;
  -webkit-line-clamp: 1;/*让他显示两行*/
  -webkit-box-orient: vertical;
  word-break: break-all;/* 允许在单词内换行。*/
  overflow: hidden;
}
.userinfo{
  position: absolute;
  width: 100%;
  height: 20px;
  display: flex;
  bottom: 0;
  justify-content: space-between;
  align-items: center;
}
.users-avatar{
  width: 20px;
  height: 20px;
  border-radius: 50%;
}
.user-name{
  font-size: x-small;
  margin-left: 2px;
  width:44%;
  color: #383838;
}
.like-num{
  margin:0 5px 0 0 !important;
  font-weight:normal !important;
}
/* AD广告轮播图 */
.ad-swiper{
  width:95%;
  height: 260rpx;
  margin: 10rpx auto;
  background-color: rgb(255, 255, 255);
  box-shadow: 0 0rpx 10rpx 2rpx rgba(36, 36, 36, 0.27); 
}